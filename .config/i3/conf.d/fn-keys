
# screen resolution
bindsym XF86Display exec xrandr --auto

# audio controls
# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioMute exec $HOME/.wm/pa-vol.sh mute && $refresh_i3status
bindsym XF86AudioRaiseVolume exec $HOME/.wm/pa-vol.sh plus && $refresh_i3status
bindsym XF86AudioLowerVolume exec $HOME/.wm/pa-vol.sh minus && $refresh_i3status
bindsym XF86AudioMicMute exec $HOME/.wm/pa-vol.sh mictoggle && $refresh_i3status

# Screen brightness controls
bindsym XF86MonBrightnessUp exec sudo brightnessctl -q set +5%
bindsym XF86MonBrightnessDown exec sudo brightnessctl -q set 5%-
