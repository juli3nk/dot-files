for_window [title="ProtonVPN Linux GUI"] floating enable
for_window [title="Extension: (MetaMask) - MetaMask Notification"] floating enable

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    mode dock
    position top

    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command $HOME/bin/mybar2

    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}

